<% @title = "Home" %>

<div class="page-introduction">
  <%= @index_page_content %>
</div> <!-- .section -->

<%= layout_section('Sections') %>
  <ul class="section-list">
    <% @root.sections.each do |section| %>
    <li>
      <h4>
        <a href="<%= path_to(section) %>"><%= section.name %></a>
      </h4>
      <p><%= htmlize(section.short_description) %></p>
    </li>      
    <% end %>
  </ul>
<%= end_layout_section %>